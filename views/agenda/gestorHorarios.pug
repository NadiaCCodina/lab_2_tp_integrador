extends ../layoutOp

block contenido 
    body
    .container
      h1 Ingresar Nuevo Horario
      p Clave de agenda: #{clave_agenda} 

      form(method="POST" action="/horario/nuevo")
        input(type='hidden', name='clave_agenda', value=clave_agenda) 
        .form-group
          label(for="fecha") Fecha
          input.form-control(type="date" id="fecha" name="fecha" required)
        .form-group
          label(for="fecha") Fecha
          input.form-control(type="date" id="fecha_fin" name="fecha_fin" required)
        .form-group
          label(for="hora_inicio") Hora de Inicio
          input.form-control(type="time" id="hora_inicio" name="hora_inicio" required)       
        .form-group
          label(for="hora_fin") Hora de Fin
          input.form-control(type="time" id="hora_fin" name="hora_fin" required)
        button.btn.btn-primary(type="submit") Guardar Horario
