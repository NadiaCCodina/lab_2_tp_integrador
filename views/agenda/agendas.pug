extends ../layoutOp


block contenido     
      h1 Seleccione la especialidad a buscar
        form(action="/seleccionar/agendas/especialidad" method="get")
            select#especialidadInput.form-control(name='clave_especialidad')
                each especialidad in especialidades
                    option(value=`${especialidad.clave_especialidad}`)= especialidad.nombre_especialidad
    
            input.btn.btn-primary(type="submit" value="Seleccionar")
            
        each agenda in agendas
                .card.text-center
                    .card-header
                        | Dr./Dra.
                    .card-body
                        h5.card-title #{agenda.nombre_completo}
                        p.card-text #{agenda.nombre_especialidad}
                    
                        form(method='get', action='/agendas/horario/medico')
                            input(type='hidden', name='clave_agenda', value=agenda.clave_agenda) 
                            input(type='hidden', name='nombre_completo', value=agenda.nombre_completo) 
                            input(type='hidden', name='nombre_especialidad', value=agenda.nombre_especialidad) 
                            button.btn.btn-primary.mx-2.p-2(style='width: 200px;' type='submit') Seleccionar
                    
                        form(method='get', action='/gestorHorarios')
                            input(type='hidden', name='clave_agenda', value=agenda.clave_agenda)
                            button.btn.btn-primary.mx-2.p-2(style='width: 200px;' type='submit') Gestionar
                        form(method='get', action='/turnos/agenda')
                            input(type='hidden', name='clave_agenda', value=agenda.clave_agenda)
                            button.btn.btn-primary.mx-2.p-2(style='width: 200px;' type='submit') Turnos  
                        form(method='get', action='/listaDeEspera')
                            input(type='hidden', name='clave_agenda', value=agenda.clave_agenda)
                            button.btn.btn-primary.mx-2.p-2(style='width: 200px;' type='submit') Lista de espera         
                        .card-footer.text-muted


                
